@model DeobhogMilkDemo.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "";
}


<head>
    <title>देवभोग, छत्तीसगढ़</title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Allied Login Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script>
        addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
    </script>


    <link href="~/LoginDesign/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/LoginDesign/css/style.css" rel="stylesheet" />


    <link href="//fonts.googleapis.com/css?family=Montserrat:300,400,500,600" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
</head>

<body>
    <h1 class="error"></h1>
    <div class="w3layouts-two-grids">
        <div class="mid-class">
            <div class="txt-left-side">
                <h2> Login Here </h2>
                <p></p>
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <form action="#" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-left-to-w3l">
                            <span class="fa fa-user" aria-hidden="true"></span>
                           

                            <input type="text" placeholder="User Name" id="UserName" name="UserName" />
                            @Html.ValidationMessageFor(m => m.UserName)
                           @* @Html.TextBoxFor(m => m.UserName, new { @class = "", @placeholder = "User Name", style = "background-color:#383A6F;border:none " })*@

                            <div class="clear"></div>
                        </div>
                        <div class="form-left-to-w3l ">

                            <span class="fa fa-lock" aria-hidden="true"></span>
                            <input type="password" id="Password" name="Password" placeholder="Password" required="" >
                            @Html.ValidationMessageFor(m => m.Password)
                            <div class="clear"></div>
                        </div>
                       
                        <div class="btnn">
                            <button type="submit">Login </button>
                        </div>
                    </form>
                }
                <div class="w3layouts_more-buttn">
                    <h3>
                        Don't Have an account..?
                        <a href="#">
                            @Html.ActionLink("Register", "Register")
                        </a>
                    </h3>
                </div>

            </div>
            <div class="img-right-side">
                <h3>Welcome To Deobhog Login Panel</h3>
                <p></p>
                <img src="~/images/deobhog.jpg" class="img-fluid" alt="" style="width:400px;">
            </div>
        </div>
    </div>

</body>






